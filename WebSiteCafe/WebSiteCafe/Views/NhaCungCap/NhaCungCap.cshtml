@model IEnumerable<WebSiteCafe.Models.NhaCungCap>

@{
    ViewBag.Title = "NhaCungCap";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<h2 style="text-align: center;color:white; font-size:25px; background-color: #444444;background-size:50px;border-radius:15px;padding :15px;width:200px;margin-left:40%">Nhà cung cấp</h2>


<p>
    @Html.ActionLink("Thêm nhà cung cấp", "ThemMoiNCC")
</p>
<table class="table">
    <tr>
        <th>
            Mã nhà cung cấp
        </th>
        <th>
            Tên nhà cũng cấp
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Điện thoại
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaNCC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenNCC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DienThoai)
        </td>
        <td>
            @Html.ActionLink("Xóa", "XoaNCC", new { id = item.MaNCC })
        </td>
    </tr>
}

</table>
